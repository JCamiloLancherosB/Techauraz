geX - slider.offsetLeft;\n    const walk = (x - startX) * 2;\n    slider.scrollLeft = scrollLeft - walk;\n  });\n});\n<\/script>","color_scheme":"","padding_top":40,"padding_bottom":52}}},"order":["main","171500672571a9dd42","1759259835d66ec7b3","related-products","custom_liquid_nfWjRe"]}