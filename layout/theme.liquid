    {%- for language in localization.available_languages -%}
      <link rel="alternate" hreflang="{{ language.iso_code }}" href="{{ canonical_url | replace: request.locale.root_url, language.root_url }}">
    {%- endfor -%}
    <link rel="alternate" hreflang="x-default" href="{{ canonical_url }}">

