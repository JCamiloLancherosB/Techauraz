  </div>
</div>

<style>
.product-includes {
  background: #ffffff;
  border: 2px solid #f97316;
  border-radius: 20px;
}

.product-includes__container {
  max-width: 1000px;
  margin: 0 auto;
  padding: 0 1.5rem;
}

.product-includes__heading {
  font-size: 1.75rem;
  font-weight: 700;
  text-align: center;
  color: #1f2937;
  margin-bottom: 0.75rem;
}

.product-includes__description {
  font-size: 1.125rem;
  text-align: center;
  color: #6b7280;
  margin-bottom: 2rem;
  line-height: 1.6;
}

.product-includes__grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 1.25rem;
}

.product-includes__item {
  display: flex;
  align-items: flex-start;
  gap: 1rem;
  padding: 1.25rem;
  background: #fff7ed;
  border-radius: 12px;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.product-includes__item:hover {
  transform: translateX(4px);
  box-shadow: -4px 0 0 #f97316;
}

@media (prefers-reduced-motion: reduce) {
  .product-includes__item:hover {
    transform: none;
  }
}

.product-includes__item-icon {
  flex-shrink: 0;
  width: 48px;
  height: 48px;
  border-radius: 50%;
  background: linear-gradient(135deg, #f97316 0%, #fb923c 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.5rem;
  box-shadow: 0 2px 8px rgba(249, 115, 22, 0.3);
}

.product-includes__item-content {
  flex: 1;
}

.product-includes__item-title {
  font-size: 1.125rem;
  font-weight: 700;
  color: #1f2937;
  margin: 0 0 0.25rem 0;
}

.product-includes__item-description {
  font-size: 0.9375rem;
  color: #6b7280;
  line-height: 1.5;
  margin: 0;
}

/* Responsive */
@media screen and (min-width: 750px) {
  .product-includes__grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }
}

@media screen and (max-width: 749px) {
  .product-includes__heading {
    font-size: 1.5rem;
  }

  .product-includes__description {
    font-size: 1rem;
    margin-bottom: 1.5rem;
  }

  .product-includes__item {
    padding: 1rem;
  }

  .product-includes__item-icon {
    width: 40px;
    height: 40px;
    font-size: 1.25rem;
  }

  .product-includes__item-title {
    font-size: 1rem;
  }

  .product-includes__item-description {
    font-size: 0.875rem;
  }
}
</style>

