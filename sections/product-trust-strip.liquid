      </span>
      <span class="product-trust-strip__text">{{ section.settings.text_cod }}</span>
    </div>

    {%- comment -%} ‚úÖ Stock disponible {%- endcomment -%}
    {%- if variant.available -%}
      <div class="product-trust-strip__item product-trust-strip__item--stock">
        <span class="product-trust-strip__icon" aria-hidden="true">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
        </span>
        <span class="product-trust-strip__text">{{ section.settings.text_stock_available }}</span>
      </div>
    {%- else -%}
      <div class="product-trust-strip__item product-trust-strip__item--unavailable">
        <span class="product-trust-strip__icon" aria-hidden="true">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/></svg>
        </span>
        <span class="product-trust-strip__text">{{ section.settings.text_stock_unavailable }}</span>
      </div>
    {%- endif -%}

  </div>
</div>
{%- endif -%}

