{%- assign variant = product.selected_or_first_available_variant -%}

<div class="product-trust-strip" data-section-id="{{ section.id }}">
  <div class="product-trust-strip__grid">

    {%- comment -%} üõ°Ô∏è Garant√≠a {%- endcomment -%}
    <div class="product-trust-strip__item">
      <span class="product-trust-strip__icon" aria-hidden="true">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
      </span>
      <span class="product-trust-strip__text">{{ section.settings.text_guarantee }}</span>
    </div>

    {%- comment -%} üöö Env√≠o gratis {%- endcomment -%}
    <div class="product-trust-strip__item">
