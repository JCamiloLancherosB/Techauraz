<div class="testimonials-section section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
  <div class="page-width">
    {%- if section.settings.title != blank -%}
      <div class="title-wrapper-with-link title-wrapper--self-padded-mobile">
        <h2 class="testimonials-section__title inline-richtext {{ section.settings.heading_size }}">
          {{ section.settings.title }}
        </h2>
      </div>
    {%- endif -%}

    <slider-component class="testimonials-slider-wrapper">
      <div class="testimonials-slider slider slider--desktop" id="Slider-{{ section.id }}" role="region" aria-label="Testimonios">
        {%- for block in section.blocks -%}
          <div class="testimonial-card" id="Slide-{{ section.id }}-{{ forloop.index }}" {{ block.shopify_attributes }}>
            <div class="testimonial-card__content">
              {%- comment -%} Rating stars {%- endcomment -%}
              {%- if block.settings.rating > 0 -%}
                <div class="testimonial-card__rating" aria-label="{{ block.settings.rating }} de 5 estrellas">
                  {%- for i in (1..5) -%}
                    {%- if i <= block.settings.rating -%}
                      <span class="star star--filled">★</span>
                    {%- else -%}
                      <span class="star">☆</span>
                    {%- endif -%}
                  {%- endfor -%}
                </div>
              {%- endif -%}

              {%- comment -%} Testimonial text {%- endcomment -%}
              {%- if block.settings.testimonial_text != blank -%}
                <blockquote class="testimonial-card__text">
                  "{{ block.settings.testimonial_text }}"
                </blockquote>
              {%- endif -%}

              {%- comment -%} Author info {%- endcomment -%}
              <div class="testimonial-card__author">
                {%- if block.settings.author_image != blank -%}
                  <img
                    src="{{ block.settings.author_image | image_url: width: 50 }}"
                    alt="{{ block.settings.author_name | escape }}"
                    class="testimonial-card__avatar"
                    width="50"
                    height="50"
                    loading="lazy">
                {%- else -%}
                  <div class="testimonial-card__avatar testimonial-card__avatar--placeholder">
                    {{ block.settings.author_name | slice: 0, 1 | upcase }}
                  </div>
                {%- endif -%}
                <div class="testimonial-card__author-info">
                  {%- if block.settings.author_name != blank -%}
                    <div class="testimonial-card__author-name">{{ block.settings.author_name }}</div>
                  {%- endif -%}
                  {%- if block.settings.author_type != blank -%}
                    <div class="testimonial-card__author-type">{{ block.settings.author_type }}</div>
                  {%- endif -%}
                </div>
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>

      {%- if section.blocks.size > 1 -%}
        <div class="slider-buttons">
          <button
            type="button"
            class="slider-button slider-button--prev"
            name="previous"
            aria-label="Testimonio anterior"
            aria-controls="Slider-{{ section.id }}">
            {% render 'icon-caret' %}
          </button>
          <div class="slider-counter">
            {%- for block in section.blocks -%}
              <button
                class="slider-counter__link slider-counter__link--dots link"
                aria-label="Ir al testimonio {{ forloop.index }}"
                aria-controls="Slider-{{ section.id }}">
                <span class="dot"></span>
              </button>
            {%- endfor -%}
          </div>
          <button
            type="button"
            class="slider-button slider-button--next"
            name="next"
            aria-label="Siguiente testimonio"
            aria-controls="Slider-{{ section.id }}">
            {% render 'icon-caret' %}
          </button>
        </div>
      {%- endif -%}
    </slider-component>

    {%- if section.settings.show_view_all and section.settings.view_all_link != blank -%}
      <div class="testimonials-section__view-all center">
        <a href="{{ section.settings.view_all_link }}" class="button button--secondary">
          {{ section.settings.view_all_text | default: 'Ver más reseñas' }}
        </a>
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Testimonios",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Lo que dicen nuestros clientes",
      "label": "Título"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        { "value": "h2", "label": "Pequeño" },
        { "value": "h1", "label": "Mediano" },
        { "value": "h0", "label": "Grande" }
      ],
      "default": "h1",
      "label": "Tamaño del título"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        { "value": "background-1", "label": "Esquema 1" },
        { "value": "background-2", "label": "Esquema 2" },
        { "value": "inverse", "label": "Inverso" }
      ],
      "default": "background-1",
      "label": "Esquema de color"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": false,
      "label": "Mostrar botón 'Ver más reseñas'"
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "Enlace del botón 'Ver más'"
    },
    {
      "type": "text",
      "id": "view_all_text",
      "default": "Ver más reseñas",
      "label": "Texto del botón"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding superior",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding inferior",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonio",
      "settings": [
        {
          "type": "range",
          "id": "rating",
          "min": 1,
          "max": 5,
          "step": 1,
          "label": "Calificación (estrellas)",
          "default": 5
        },
        {
          "type": "textarea",
          "id": "testimonial_text",
          "label": "Texto del testimonio",
          "default": "Producto excelente, superó mis expectativas."
        },
        {
          "type": "text",
          "id": "author_name",
          "label": "Nombre del cliente",
          "default": "Juan Pérez"
        },
        {
          "type": "text",
          "id": "author_type",
          "label": "Tipo de cliente",
          "default": "Cliente verificado",
          "info": "Ejemplo: Cliente verificado, Comprador frecuente, etc."
        },
        {
          "type": "image_picker",
          "id": "author_image",
          "label": "Foto del cliente (opcional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonios",
      "blocks": [
        {
          "type": "testimonial",
          "settings": {
            "rating": 5,
            "testimonial_text": "Los audífonos superaron mis expectativas. El sonido es cristalino y la cancelación de ruido es increíble.",
            "author_name": "Carlos M.",
            "author_type": "Cliente verificado"
          }
        },
        {
          "type": "testimonial",
          "settings": {
            "rating": 5,
            "testimonial_text": "El cargador rápido es excelente. Carga mi teléfono en menos de una hora y la calidad de construcción es notable.",
            "author_name": "Ana R.",
            "author_type": "Comprador frecuente"
          }
        },
        {
          "type": "testimonial",
          "settings": {
            "rating": 4,
            "testimonial_text": "Las memorias USB personalizadas son perfectas para regalos corporativos. La impresión del logo quedó nítida.",
            "author_name": "Empresas Tech",
            "author_type": "Cliente corporativo"
          }
        }
      ]
    }
  ]
}
{% endschema %}
