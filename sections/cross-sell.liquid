{% comment %}
  Cross-Sell Section
  Muestra productos relacionados con opciones de bundle
{% endcomment %}

{{ 'cross-sell.js' | asset_url | script_tag }}

<div class="cross-sell container">
  <div class="cross-sell__header">
    <h2 class="cross-sell__title">{{ section.settings.title | default: 'Completa tu compra' }}</h2>
    {% if section.settings.subtitle %}
      <p class="cross-sell__subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}
  </div>

  <div class="cross-sell__grid">
    {% for block in section.blocks %}
      {% if block.type == 'product' %}
        {% assign cross_product = all_products[block.settings.product] %}
        {% if cross_product %}
          <div class="cross-sell-item" data-variant-id="{{ cross_product.selected_or_first_available_variant.id }}">
            {% if block.settings.show_badge and block.settings.badge_text != blank %}
              <span class="cross-sell-item__badge">{{ block.settings.badge_text }}</span>
            {% endif %}
            
            <div class="cross-sell-item__content">
              <a href="{{ cross_product.url }}" class="cross-sell-item__image">
                {% if cross_product.featured_image %}
                  <img 
                    src="{{ cross_product.featured_image | image_url: width: 160 }}"
                    alt="{{ cross_product.featured_image.alt | escape }}"
                    loading="lazy"
                    width="80"
                    height="80"
                  >
                {% else %}
                  <div style="width: 80px; height: 80px; background: var(--bg-tertiary); display: flex; align-items: center; justify-content: center; color: var(--text-muted);">
                    Sin imagen
                  </div>
                {% endif %}
              </a>

              <div class="cross-sell-item__info">
                <h3 class="cross-sell-item__title">
                  <a href="{{ cross_product.url }}">{{ cross_product.title }}</a>
                </h3>
                
                <div class="cross-sell-item__price" data-price="{{ cross_product.price }}">
                  <span class="cross-sell-item__price-current">
                    {{ cross_product.price | money }}
                  </span>
                  {% if cross_product.compare_at_price > cross_product.price %}
                    <span class="cross-sell-item__price-compare">
                      {{ cross_product.compare_at_price | money }}
                    </span>
                  {% endif %}
                </div>

                {% if cross_product.compare_at_price > cross_product.price %}
                  {% assign savings = cross_product.compare_at_price | minus: cross_product.price %}
                  {% assign savings_percent = savings | times: 100 | divided_by: cross_product.compare_at_price %}
                  <div class="cross-sell-item__savings">
                    Ahorra {{ savings | money }} ({{ savings_percent }}%)
                  </div>
                {% endif %}

                <button class="btn btn-primary cross-sell-item__action" type="button">
                  Agregar al carrito
                </button>
              </div>
            </div>
          </div>
        {% endif %}
      {% endif %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Cross-Sell",
  "tag": "section",
  "class": "section-cross-sell",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "Completa tu compra"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtítulo",
      "default": "Productos que combinan perfectamente"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Producto",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Producto"
        },
        {
          "type": "checkbox",
          "id": "show_badge",
          "label": "Mostrar badge",
          "default": false
        },
        {
          "type": "text",
          "id": "badge_text",
          "label": "Texto del badge",
          "default": "Popular"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Cross-Sell",
      "blocks": [
        {
          "type": "product"
        },
        {
          "type": "product"
        },
        {
          "type": "product"
        }
      ]
    }
  ]
}
{% endschema %}
