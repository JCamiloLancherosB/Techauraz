  </div>
</div>

<style>
.trust-badges {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-top: 1px solid #dee2e6;
  border-bottom: 1px solid #dee2e6;
}

.trust-badges__container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1.5rem;
}

.trust-badges__heading {
  font-size: 1.25rem;
  font-weight: 600;
  text-align: center;
  color: #1f2937;
  margin-bottom: 1.5rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.trust-badges__grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
  gap: 1.5rem;
  align-items: center;
  justify-items: center;
}

.trust-badges__item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.75rem;
  text-align: center;
  padding: 1rem;
  transition: transform 0.2s ease;
}

.trust-badges__item:hover {
  transform: translateY(-4px);
}

@media (prefers-reduced-motion: reduce) {
  .trust-badges__item:hover {
    transform: none;
  }
}

.trust-badges__icon {
  font-size: 2.5rem;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.trust-badges__icon svg {
  width: 50px;
  height: 50px;
}

.trust-badges__image {
  width: 60px;
  height: 60px;
  object-fit: contain;
}

.trust-badges__text {
  font-size: 0.875rem;
  font-weight: 600;
  color: #374151;
  line-height: 1.4;
  max-width: 150px;
}

/* Responsive */
@media screen and (max-width: 749px) {
  .trust-badges__grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  .trust-badges__heading {
    font-size: 1.125rem;
    margin-bottom: 1.25rem;
  }

  .trust-badges__item {
    padding: 0.75rem;
  }

  .trust-badges__icon {
    font-size: 2rem;
  }

  .trust-badges__icon svg {
    width: 40px;
    height: 40px;
  }

  .trust-badges__image {
    width: 50px;
    height: 50px;
  }

  .trust-badges__text {
    font-size: 0.8125rem;
  }
}

@media screen and (min-width: 750px) {
  .trust-badges__grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

@media screen and (min-width: 990px) {
  .trust-badges__grid {
    grid-template-columns: repeat(6, 1fr);
  }
}
</style>

