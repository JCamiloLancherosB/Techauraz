{% comment %}
  Conversion-Optimized Newsletter Form
  
  Simplified newsletter signup with single input and clear CTA.
  
  Usage:
  {% render 'newsletter-conversion' %}
{% endcomment %}

{%- liquid
  assign heading = section.settings.heading | default: 'Únete a nuestra comunidad'
  assign subheading = section.settings.subheading | default: 'Recibe ofertas exclusivas y novedades de productos tech'
  assign button_text = section.settings.button_text | default: 'Suscribirme'
-%}

<div class="ta-conv-newsletter-section page-width section-{{ section.id }}-padding">
  <div class="ta-conv-newsletter__inner">
    {%- if heading and heading != blank -%}
      <h2>{{ heading }}</h2>
    {%- endif -%}
    
    {%- if subheading and subheading != blank -%}
      <p>{{ subheading }}</p>
    {%- endif -%}
    
    {%- form 'customer', class: 'ta-conv-newsletter', id: 'ContactFooter' -%}
      <input type="hidden" name="contact[tags]" value="newsletter">
      
      {%- if form.posted_successfully? -%}
        <div>
          ✓ ¡Gracias por suscribirte! Revisa tu correo para confirmar.
        </div>
      {%- endif -%}
      
      {%- if form.errors -%}
        <div>
          {{ form.errors | default_errors }}
        </div>
      {%- endif -%}
      
      <input 
        type="email" 
        name="contact[email]" 
        class="ta-conv-newsletter__input"
        placeholder="tu@email.com"
        aria-label="Correo electrónico"
        autocomplete="email"
        required>
      
      <button 
        type="submit" 
        class="ta-conv-newsletter__submit"
        name="commit">
        {{ button_text }}
      </button>
    {%- endform -%}
    
    <p>
      No spam. Cancela cuando quieras.
    </p>
  </div>
</div>

{% schema %}
{
  "name": "Newsletter Conversión",
  "class": "section",
  "tag": "section",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding superior",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding inferior",
      "default": 0
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "Únete a nuestra comunidad"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subtítulo",
      "default": "Recibe ofertas exclusivas y novedades de productos tech"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texto del botón",
      "default": "Suscribirme"
    }
  ],
  "presets": [
    {
      "name": "Newsletter Conversión"
    }
  ]
}
{% endschema %}
