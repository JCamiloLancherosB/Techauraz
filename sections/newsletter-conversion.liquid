{% comment %}
  Conversion-Optimized Newsletter Form
  
  Simplified newsletter signup with single input and clear CTA.
  Features: AJAX submission, loading state, success/error feedback
  
  Usage:
  {% render 'newsletter-conversion' %}
{% endcomment %}

<script src="{{ 'forms-techauraz.js' | asset_url }}" defer="defer"></script>

{%- liquid
  assign heading = section.settings.heading | default: 'Únete a nuestra comunidad'
  assign subheading = section.settings.subheading | default: 'Recibe ofertas exclusivas y novedades de productos tech'
  assign button_text = section.settings.button_text | default: 'Suscribirme'
  assign success_message = section.settings.success_message | default: '¡Gracias por suscribirte! Revisa tu correo para confirmar.'
-%}

<div class="ta-conv-newsletter-section page-width section-{{ section.id }}-padding">
  <div class="ta-conv-newsletter__inner">
    {%- if heading and heading != blank -%}
      <h2>{{ heading }}</h2>
    {%- endif -%}
    
    {%- if subheading and subheading != blank -%}
      <p>{{ subheading }}</p>
    {%- endif -%}
    
    {%- form 'customer', class: 'ta-conv-newsletter newsletter-form', id: 'NewsletterConversion-' | append: section.id, data-success-message: success_message -%}
      <input type="hidden" name="contact[tags]" value="newsletter">
      
      {%- if form.posted_successfully? -%}
        <div class="newsletter-form__message newsletter-form__message--success is-visible" role="status" tabindex="-1">
          <svg aria-hidden="true" focusable="false" class="icon icon-success" viewBox="0 0 13 13" style="width:16px;height:16px;vertical-align:middle;margin-right:6px;">
            <path d="M6.5 12.35C9.73087 12.35 12.35 9.73086 12.35 6.5C12.35 3.26913 9.73087 0.65 6.5 0.65C3.26913 0.65 0.65 3.26913 0.65 6.5C0.65 9.73086 3.26913 12.35 6.5 12.35Z" fill="#428445" stroke="white" stroke-width="0.7"/>
            <path d="M5.53271 8.66357L9.25213 4.68197" stroke="white"/>
            <path d="M4.10645 6.7688L6.13766 8.62553" stroke="white"/>
          </svg>
          {{ success_message }}
        </div>
      {%- endif -%}
      
      {%- if form.errors -%}
        <div class="newsletter-form__message newsletter-form__message--error is-visible" role="alert">
          <svg aria-hidden="true" focusable="false" class="icon icon-error" viewBox="0 0 13 13" style="width:16px;height:16px;vertical-align:middle;margin-right:6px;">
            <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
            <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
          </svg>
          {{ form.errors | default_errors }}
        </div>
      {%- endif -%}
      
      <div class="ta-conv-newsletter__field-wrapper">
        <input 
          id="NewsletterFormInput--{{ section.id }}"
          type="email" 
          name="contact[email]" 
          class="ta-conv-newsletter__input field__input"
          placeholder="{{ 'newsletter.label' | t | default: 'tu@email.com' }}"
          aria-label="{{ 'newsletter.label' | t | default: 'Correo electrónico' }}"
          aria-required="true"
          autocomplete="email"
          autocorrect="off"
          autocapitalize="off"
          {% if form.errors %}
            aria-invalid="true"
            aria-describedby="NewsletterConversion-{{ section.id }}-error"
          {% endif %}
          required>
        
        <button 
          type="submit" 
          class="ta-conv-newsletter__submit"
          name="commit"
          aria-label="{{ button_text }}">
          <span class="ta-conv-newsletter__submit-text">{{ button_text }}</span>
        </button>
      </div>
    {%- endform -%}
    
    <p class="ta-conv-newsletter__disclaimer">
      {{ section.settings.disclaimer | default: 'No spam. Cancela cuando quieras.' }}
    </p>
  </div>
</div>

{% schema %}
{
  "name": "Newsletter Conversión",
  "class": "section",
  "tag": "section",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding superior",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding inferior",
      "default": 0
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "Únete a nuestra comunidad"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subtítulo",
      "default": "Recibe ofertas exclusivas y novedades de productos tech"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texto del botón",
      "default": "Suscribirme"
    },
    {
      "type": "text",
      "id": "success_message",
      "label": "Mensaje de éxito",
      "default": "¡Gracias por suscribirte! Revisa tu correo para confirmar."
    },
    {
      "type": "text",
      "id": "disclaimer",
      "label": "Texto de descargo",
      "default": "No spam. Cancela cuando quieras."
    }
  ],
  "presets": [
    {
      "name": "Newsletter Conversión"
    }
  ]
}
{% endschema %}
