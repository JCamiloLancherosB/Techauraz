<style>
.category-nav-section {
  padding: 3rem 0;
  background: linear-gradient(180deg, var(--color-bg-primary) 0%, var(--color-bg-secondary) 100%);
  border-bottom: 1px solid var(--color-border-light);
}

.category-nav-wrapper {
  max-width: var(--page-width);
  margin: 0 auto;
  padding: 0 2rem;
}

.category-nav-title {
  text-align: center;
  font-size: clamp(2rem, 3vw, 2.8rem);
  font-weight: 700;
  color: var(--color-text-primary);
  margin-bottom: 2.5rem;
  letter-spacing: -0.02em;
}

.category-nav-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 1.5rem;
}

@media screen and (min-width: 750px) {
  .category-nav-grid {
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }
}

@media screen and (min-width: 990px) {
  .category-nav-grid {
    grid-template-columns: repeat(4, 1fr);
    gap: 2.5rem;
  }
}

@media screen and (min-width: 1200px) {
  .category-nav-grid {
    grid-template-columns: repeat(5, 1fr);
  }
}

.category-card {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 2.5rem 1.5rem;
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  border: 2px solid var(--color-border);
  border-radius: 16px;
  text-decoration: none;
  transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
  min-height: 160px;
}

.category-card::before {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.05) 0%, rgba(37, 99, 235, 0.05) 100%);
  opacity: 0;
  transition: opacity 0.35s ease;
}

.category-card:hover::before {
  opacity: 1;
}

.category-card:hover {
  transform: translateY(-6px);
  border-color: var(--color-primary-light);
  box-shadow: 0 16px 32px -8px rgba(37, 99, 235, 0.2), 0 8px 16px -8px rgba(37, 99, 235, 0.15);
}

.category-icon {
  font-size: 4rem;
  margin-bottom: 1rem;
  transition: transform 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  filter: drop-shadow(0 4px 8px rgba(37, 99, 235, 0.15));
}

.category-card:hover .category-icon {
  transform: scale(1.1) rotate(5deg);
}

.category-name {
  font-size: 1.6rem;
  font-weight: 600;
  color: var(--color-text-primary);
  text-align: center;
  margin-bottom: 0.5rem;
  letter-spacing: -0.01em;
  position: relative;
  z-index: 1;
}

.category-count {
  font-size: 1.3rem;
  color: var(--color-text-muted);
  position: relative;
  z-index: 1;
}

/* Mobile optimizations */
@media screen and (max-width: 749px) {
  .category-nav-section {
    padding: 2rem 0;
  }
  
  .category-nav-wrapper {
    padding: 0 1.5rem;
  }
  
  .category-card {
    padding: 2rem 1rem;
    min-height: 140px;
  }
  
  .category-icon {
    font-size: 3.5rem;
  }
  
  .category-name {
    font-size: 1.4rem;
  }
}

/* Accessibility */
.category-card:focus-visible {
  outline: 3px solid var(--color-primary);
  outline-offset: 3px;
}

/* Animation for loading */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.category-card {
  animation: fadeInUp 0.5s ease-out backwards;
}

.category-card:nth-child(1) { animation-delay: 0.05s; }
.category-card:nth-child(2) { animation-delay: 0.1s; }
.category-card:nth-child(3) { animation-delay: 0.15s; }
.category-card:nth-child(4) { animation-delay: 0.2s; }
.category-card:nth-child(5) { animation-delay: 0.25s; }
.category-card:nth-child(6) { animation-delay: 0.3s; }
</style>

<div class="category-nav-section">
  <div class="category-nav-wrapper">
    {%- if section.settings.heading != blank -%}
      <h2 class="category-nav-title">{{ section.settings.heading }}</h2>
    {%- endif -%}
    
    <div class="category-nav-grid">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'category' -%}
            <a href="{{ block.settings.link }}" class="category-card" {{ block.shopify_attributes }}>
              {%- if block.settings.icon != blank -%}
                <div class="category-icon">{{ block.settings.icon }}</div>
              {%- endif -%}
              
              {%- if block.settings.title != blank -%}
                <h3 class="category-name">{{ block.settings.title }}</h3>
              {%- endif -%}
              
              {%- if block.settings.product_count != blank -%}
                <p class="category-count">{{ block.settings.product_count }} productos</p>
              {%- endif -%}
            </a>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

