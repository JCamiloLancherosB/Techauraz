{% comment %}
  Renders WhatsApp call-to-action button
  
  Accepts:
  - phone: {String} WhatsApp phone number (default: +573008602789)
  - product_title: {String} Product title to include in message
  - product_url: {String} Product URL to include in message
  - button_text: {String} Custom button text (default: "Personaliza en WhatsApp")
  - style: {String} Button style variant (default, secondary, sticky)
  - size: {String} Button size (small, medium, large)

  Usage:
  {% render 'whatsapp-cta', 
    phone: '+573008602789',
    product_title: product.title,
    product_url: product.url,
    button_text: 'Personaliza en WhatsApp',
    style: 'secondary',
    size: 'medium'
  %}
{% endcomment %}

{%- liquid
  assign wa_phone = phone | default: '+573008602789'
  assign wa_phone_clean = wa_phone | replace: '+', '' | replace: ' ', '' | replace: '-', ''
  assign btn_text = button_text | default: 'Personaliza en WhatsApp'
  assign btn_style = style | default: 'secondary'
  assign btn_size = size | default: 'medium'
  
  if product_title != blank and product_url != blank
    assign wa_message = 'Hola! Estoy interesado en ' | append: product_title | append: '. Me gustaría más información: ' | append: shop.url | append: product_url
  elsif product_title != blank
    assign wa_message = 'Hola! Estoy interesado en ' | append: product_title | append: '. Me gustaría más información.'
  else
    assign wa_message = 'Hola! Me gustaría información sobre sus productos.'
  endif
  
  assign wa_message_encoded = wa_message | url_encode
  assign wa_link = 'https://wa.me/' | append: wa_phone_clean | append: '?text=' | append: wa_message_encoded
-%}

<a 
  href="{{ wa_link }}" 
  class="whatsapp-cta whatsapp-cta--{{ btn_style }} whatsapp-cta--{{ btn_size }}"
  target="_blank"
  rel="noopener noreferrer"
  aria-label="{{ btn_text }} - Abre WhatsApp en una nueva ventana"
>
