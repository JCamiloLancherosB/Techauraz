</div>

<script>
  // Character counter for textarea
  const textarea = document.getElementById('ContactForm-message');
  const charCount = document.getElementById('char-count');
  
  if (textarea && charCount) {
    textarea.addEventListener('input', function() {
      const count = this.value.length;
      charCount.textContent = count;
      
      const counter = charCount.parentElement;
      counter.classList.remove('form__char-counter--warning', 'form__char-counter--error');
      
      if (count > 900) {
        counter.classList.add('form__char-counter--error');
      } else if (count > 750) {
        counter.classList.add('form__char-counter--warning');
      }
    });
  }
  
  // Form submit loading state
  const form = document.getElementById('ContactForm');
  const submitBtn = document.getElementById('contact-submit');
  
  if (form && submitBtn) {
    form.addEventListener('submit', function() {
      submitBtn.classList.add('form__submit--loading');
      submitBtn.disabled = true;
    });
  }
</script>
